<body>
    <header>
        <%- include('../Basic-page-inserts/navbar.ejs')  %>
    </header>
    <article>
        <div class="container">
            <h3 class="text-center">Post Form</h3>
        </div>
        <br /> <br />


        <div class="container">
            <form class="form-floating" method='post' action='/makeNewPost'>
                <input type="text" class="form-control" id="articleNameInput" name="articleName" placeholder="Article Name"></input>
                <label for="articleNameInput">Article Name</label>
                <input type="text" class="form-control" name="articleBody" placeholder="Article Body"></input>
                <input type="text" class="form-control" name="articleAuthor" placeholder="Article Author"></input>
                <div class="sub_text">
                    <h4>Image</h4>
                </div>
                <input type='file' name='file'>
                <button type="submit">Add Article</button>
            </form>
        </div>
        <br /><br /><br />


    </article>


